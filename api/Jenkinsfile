pipeline {
    agent any

    stages {
        stage('Building/Deploying') {
            steps {
                withDockerRegistry(credentialsId: 'dockerhub', url: 'https://index.docker.io/v1/') {
                    sh 'docker-compose up -d --build'
                    sh 'docker-compose push'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
