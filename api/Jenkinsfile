pipeline {
    agent any
    tools {
        maven 'maven_3_6_3'
    }
    environment {
        DOCKER_HOME = tool name: 'docker-hub', type: 'org.jenkinsci.plugins.docker.commons.tools.DockerTool'
        PATH = "${DOCKER_HOME}/bin:${env.PATH}"
        VERSION_TAG = "0.0.2"
        USERNAME = "lenhuthao"
        PROJECT_NAME = "microservices"
    }

    stages {

        stage('Checkout scm') {
            steps {
                checkout scm
            }
        }

        stage('Build mvn') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh 'docker login -u $DOCKER_USER -p $DOCKER_PASS'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('api') {
//                     sh "docker build -t ${USERNAME}/${PROJECT_NAME}:${VERSION_TAG} ."
                    sh 'docker-compose build --no-cache'
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                dir('api') {
//                     sh "docker push ${USERNAME}/${PROJECT_NAME}:${VERSION_TAG}"
                    sh 'docker-compose push'
                }
            }
        }

        stage('Logout from Docker Hub') {
            steps {
                sh 'docker logout'
            }
        }
    }
}
