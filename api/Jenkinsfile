pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub')
        IMAGE_NAME = 'lenhuthao/microservices'
        IMAGE_TAG = '0.0.1'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('api') {
                    script {
                        // Build Docker image from the 'api' directory
//                         docker.build("${IMAGE_NAME}:${IMAGE_TAG}", "-f ./Dockerfile .")
                        bat 'start Docker-build.bat'
                    }
                }
            }
        }
    }
}
