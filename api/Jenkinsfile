pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub')
        IMAGE_NAME = 'lenhuthao/microservices'
        IMAGE_TAG = '0.0.1'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${IMAGE_NAME}:${IMAGE_TAG}", "-f ./Dockerfile .")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push Docker image to Docker Hub
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS) {
                        docker.image("${IMAGE_NAME}:${IMAGE_TAG}").push()
                    }
                }
            }
        }

        stage('Run Docker Compose') {
            steps {
                dir('api') {
                    script {
                        sh '''
                            ls
                            docker-compose -f ./jenkinsfile-docker-compose.yml up -d
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            dir('api') {
                script {
                    // Dừng các dịch vụ sau khi pipeline hoàn thành
                    sh 'docker-compose -f ./jenkinsfile-docker-compose.yml down'
                }
            }
        }
    }
}
